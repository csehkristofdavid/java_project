<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controll.controllers.PrimaryController">
  <children>
    <MenuBar VBox.vgrow="NEVER" />
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <DialogPane contentText="Given a board consisting of 6x7 squares, with 7 red and 7 blue discs on it. One player plays with the red discs, the other with the blue ones. They take turns moving, and in one move, they must move one of their own colored discs:&#10;-The disc can move forward or diagonally forward one square if the destination square is empty.&#10;-The disc can move diagonally forward one square if the destination square is occupied by an opponent's disc. The opponent's disc must be removed from the board.&#10;Dark squares are prohibited and cannot be moved onto. The player who is unable to move loses their turn.&#10;" expanded="true" headerText="Board Game" layoutX="50.0" layoutY="37.0" prefHeight="228.0" prefWidth="526.0" />
            <Button fx:id="newGameButton" layoutX="50.0" layoutY="281.0" mnemonicParsing="false" text="New Game" />
            <Button fx:id="statisticsButton" layoutX="50.0" layoutY="325.0" mnemonicParsing="false" text="Stats" />
      </children>
    </AnchorPane>
  </children>
</VBox>
